@model IBFSNetwork.Models.FeedModels.Feed

@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Feed</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Desc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Desc" class="form-control" />
                <span asp-validation-for="Desc" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FeedType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="FeedType" class="form-control">
                    <option value="0">RSS</option>
                    <option value="1">RDF</option>
                    <option value="2">Atom</option>
                </select>
                <span asp-validation-for="FeedType" class="text-danger" />
            </div>
        </div>
        @if (User.IsInRole("admin"))
        {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsDefault" />
                    <label asp-for="IsDefault"></label>
                </div>
            </div>
        </div>
        }
        <div class="form-group">
            <label asp-for="Url" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

