@model IBFSNetwork.Models.ApplicationClient

@{
    ViewData["Title"] = "Clients";
}

<form asp-route-area="Admin"  asp-controller="ApplicationClients" asp-action="Create" method="post">
    <div class="form-horizontal">
        <h2>Create New Client</h2>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ClientCode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ClientCode" class="form-control" />
                <span asp-validation-for="ClientCode" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UserCount" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UserCount" class="form-control" />
                <span asp-validation-for="UserCount" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a   asp-controller="ApplicationClients" asp-action="Index">Back to List</a>
  
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
