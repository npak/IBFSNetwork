@model IBFSNetwork.Models.ForumViewModels.Reply

@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Reply</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="AppUserId" class="form-control" />
        <input type="hidden" asp-for="QuestionId" class="form-control" />

        <div id="summernote">Hello Summernote</div>
        <div class="form-group">
            
            <label asp-for="ReplyMsg" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ReplyMsg" class="form-control" />
                <span asp-validation-for="ReplyMsg" class="text-danger" />
            </div>
            
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    $(document).ready(function () {
        alert("asasa");
        $('#summernote').summernote({
            height: 300,                 // set editor height
            minHeight: null,             // set minimum height of editor
            maxHeight: null,             // set maximum height of editor
            focus: true                  // set focus to editable area after initializing summernote
        });
    });
</script>