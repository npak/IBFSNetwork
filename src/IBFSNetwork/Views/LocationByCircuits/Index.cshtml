@model IEnumerable<IBFSNetwork.Models.AlertViewModels.LocationByCircuit>

@{
    ViewData["Title"] = "Circuit Courts";
}

<h2>Circuit Courts</h2>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Caption)
            </th>
            <th><a asp-action="Create" class="btn btn-addnew btn-xs">Create New</a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Caption)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary btn-xs" asp-route-id="@item.LocationByCircuitId">Edit</a> |
                <a asp-action="Delete" class="btn btn-danger btn-xs" asp-route-id="@item.LocationByCircuitId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
