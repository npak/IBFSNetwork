@model IBFSNetwork.Models.FaqModels.FAQ

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Edit FAQ</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="UserId" class="form-control" />
    <input type="hidden" asp-for="FAQId" />
        <div class="form-group">
            <label asp-for="Question" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Question" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Question" class="text-danger" />
            </div>
        </div>
@if (User.IsInRole("admin"))
{
        <div class="form-group">
            <label asp-for="Replay" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Replay" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Replay" class="text-danger" />
            </div>
        </div>
}
               <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

