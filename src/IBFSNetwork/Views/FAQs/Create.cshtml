@model IBFSNetwork.Models.FaqModels.FAQ

@{
    ViewData["Title"] = "Create";
}
<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Create FAQ</h4>

        <div asp-validation-summary="All" class="text-danger"></div>
        <input type ="hidden" asp-for="UserId" class="form-control" />
        <div class="form-group">
            <label asp-for="Question" class="col-md-2 control-label"></label>
            <div class="col-md-4">
                <textarea asp-for="Question" rows="8" class="form-control"></textarea>
            </div>
        </div>
        @if (User.IsInRole("admin"))
        {
        <div class="form-group">
            <label asp-for="Replay" class="col-md-2 control-label"></label>
            <div class="col-md-4">
                <textarea asp-for="Replay" rows="8" class="form-control"></textarea>
                <span asp-validation-for="Replay" class="text-danger" />
            </div>
        </div>
        }
        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

