@model IEnumerable<IBFSNetwork.Models.QuestionnaireModel>

@{
    ViewData["Title"] = "Index";
}

<h2>List of Aswers </h2>
 
@foreach (var que in ViewBag.Questionnaire)
{
                <div class="form-group">
                    <label class="col-md-10">@que.Question</label>
                </div>
 
}

<table class="table">
    <thead>
        <tr>
            <th>  Answers</th>
            <th>
              
            </th>
            @*<th>
                Date
            </th>*@
            <th><a asp-action="Create" class="btn btn-addnew btn-xs">Create New</a>
</th>
        </tr>
    </thead>
    <tbody>
@{ int j = 0;}
@foreach (var item in Model) {
    j++;
        <tr>
            <td class="col-md-1">
                # @j             
            </td>
            
            <td>
                @{ int i = 0;}

                    @foreach (var ans in item.QuestionnaireAnswers)
                    {
                        i++;
                        @*<div class="form-group">
                            <label class="col-md-10">@i)</label>
                        </div>*@
                        <div class="form-group">
                            <div class="col-md-10">
                       <p class="body-content text-primary">@i)  @ans.AnswerText</p>
                                @*<textarea rows="3" asp-for="@ans.AnswerText" class="form-control" readonly></textarea>*@                                
                            </div>
                        </div>

                    }
            </td>
            <td class="col-md-2">
                <a asp-action="Edit" class="btn btn-primary btn-xs" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" class="btn btn-danger btn-xs" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
