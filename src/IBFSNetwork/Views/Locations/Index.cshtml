@model IEnumerable<IBFSNetwork.Models.AlertViewModels.Location>

@{
    ViewData["Title"] = "Locations";
}
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>

<h2>Locations</h2>

<p>
    <a asp-action="Create" class="btn btn-addnew btn-xs">Create New</a>
</p>
<table id="myTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Caption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Caption)
                </td>
                <td class="col-md-2 text-center">
                    <a asp-action="Edit" class="btn btn-primary btn-xs" asp-route-id="@item.LocationId">Edit</a> |
                    <a asp-action="Delete" class="btn btn-danger btn-xs" asp-route-id="@item.LocationId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
