<script src="http://cdn.datatables.net/plug-ins/f2c75b7247b/integration/bootstrap/3/dataTables.bootstrap.js"></script>


<script>
    $(document).ready(function () {
       
        $('#myTable').DataTable();
    });

</script>
<h4>Alerts</h4>


<table id="myTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Start date</th>
            <th>Name</th>
            <th>Last</th>
           
            <th>Salary</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Start date</th>

             <th>Name</th>
            <th>Last</th>
            <th>Salary</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AlertDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LostAmount)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.AlertId" im><img src="~/images/myEdit.png" title="Edit"></a>
                    <a asp-action="Delete" asp-route-id="@item.AlertId"><img src="~/images/myremove.png" title="Delete"></a> |
                    <a asp-action="NewDoc" asp-route-id="@item.AlertId"><img src="~/images/myAdd.png" title="Add document"></a>
                    <a asp-action="Members" asp-route-id="@item.AlertId"><img src="~/images/membersOld.png" title="Add Group members"></a>

                    @*<a asp-action="Members" asp-route-id="@item.AlertId"><span class="glyphicon glyphicon-remove"></span></a>*@

                </td>
            </tr>
        }
    </tbody>
</table>

